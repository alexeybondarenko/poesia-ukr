extends ./layout

block content
  div.block
    .typography
      h2=poem.name
      h5=poem.author.name
      | !{poem.content}
    div.block__social.share-buttons
      a(href="http://www.facebook.com/share.php?u=#{ogUrl}", target="_blank", title="Поділитися посиланням")
        i.icon.icon-share-fb
      a(href="http://vkontakte.ru/share.php?url=#{ogUrl}&title=#{ogTitle}", target="_blank", title="Поділитися посиланням")
        i.icon.icon-share-vk
      a(href="http://twitter.com/share?text=#{ogTitle}&url=#{ogUrl}", , target="_blank", title="Поділитися посиланням")
        i.icon.icon-share-twitter
    p
      a.highlight(href="/random") Наступний вірш
        span.arrow →
